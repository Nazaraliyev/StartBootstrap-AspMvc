@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model VmSettings

<div class="container-fluid">
	<h2>Web Settings</h2>
	<table class="table mb-5">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Logo</th>
				<th scope="col">Location</th>
				<th scope="col">FreelancerInfo</th>
				<th scope="col">Modify</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th scope="row">1</th>
				<td>@Model.settings.Logo</td>
				<td>@Model.settings.Location</td>
				<td>@Model.settings.FreelancerAbout</td>
				<td>
					<a class="btn btn-primary" asp-area="admin" asp-controller="Settings" asp-action="Update">Update</a>
				</td>
			</tr>
		</tbody>
	</table>
	<h2 class="mt-5">Social Media Address</h2>

	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Icon</th>
				<th scope="col">Name</th>
				<th scope="col">Link</th>
				<th scope="col">Modify</th>
			</tr>
		</thead>
		<tbody>
			@{
				int i = 1;
				foreach (var item in Model.sosialMedias)
				{
					<tr>
						<th scope="row">@i</th>
						<td><i class="@item.Icon"></i></td>
						<td>@item.Name</td>
						<td>@item.Link</td>
						<td>
							<a class="btn btn-primary" asp-area="admin" asp-controller="Settings" asp-action="SmUpdate" asp-route-id="@item.Id">Update</a>
							<a class="btn btn-danger" asp-area="admin" asp-controller="Settings" asp-action="SmDelete" asp-route-id="@item.Id">Delete</a>
						</td>
					</tr>
					i++;
				}
			}
		</tbody>
	</table>
	<a class="btn btn-primary" style = "padding : 10px 40px" asp-area="admin" asp-controller="Settings" asp-action="SmCreate">Create New</a>


</div>

