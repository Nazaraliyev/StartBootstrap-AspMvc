
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Portfolio

<div class="container-fluid">
	<h2>Create New Portfolio Card</h2>
	<form class = "w-50" asp-area="admin" asp-controller="Portfolio" asp-action="Update" method="post" enctype = "multipart/form-data">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3">
			<label asp-for = "@Model." class="form-label">Default file input example</label>
			<input class="form-control" asp-for = "@Model.ImgFile">
		</div>

		<div class="mb-3">
			<label asp-for = "@Model.ImgDescription" class="form-label">Example textarea</label>
			<textarea class="form-control" asp-for = "@Model.ImgDescription" rows="3"></textarea>
		</div>
		<input asp-for = "@Model.Id" hidden/>
		<button type = "submit" class = "btn btn-primary">Create</button>
	</form>
</div>