@model VmHome
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<!-- Bootstrap cnd link -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
		  rel="stylesheet"
		  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
		  crossorigin="anonymous" />

	<!-- Font Awasome Cdn Link /-->
	<link rel="stylesheet"
		  href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
		  integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
		  crossorigin="anonymous" />

	<!-- Costume css link -->
	<link rel="stylesheet" href="~/assets/Css/style.css" />
	<title>Start Bootstrap</title>
</head>
<body>
	<header>
		<nav class="d-flex justify-content-between container">
			<div id="logo">
				<a class="text-uppercase">@Model.settings.Logo</a>
			</div>
			<ul id="menu" class="d-flex justify-content-between">
				<li class="text-uppercase">portfolio</li>
				<li class="text-uppercase">about</li>
				<li class="text-uppercase">contact</li>
			</ul>
		</nav>
	</header>
	<main>
		<section id="banner">
			<div class="container d-flex flex-column align-items-center">
				<img src="~/assets//Img/banner/@Model.settings.BannerImg" alt="avatar" />
				<h1>@Model.settings.BannerHeader</h1>
				<div class="star">
					<span> <i class="fas fa-star"></i></span>
				</div>
				<p>@Model.settings.BannerText</p>
			</div>
		</section>

		<section id="portfolio">
			<div class="container">
				<h2>portfolio</h2>
				<div class="star">
					<span>
						<i class="fas fa-star"></i>
					</span>
				</div>
				<div id="portfolio-items-block">
					<div class="row justify-content-between">
						@{
							foreach (var item in Model.portfolios)
							{
								<div class="col-4">
									<div class="portfolio-item">
										<img src="~/assets//Img/portfolio/@item.ImgName" alt="portfolio-item" />
										<div class="d-flex justify-content-center align-items-center">
											<i class="fas fa-plus"></i>
										</div>
									</div>
								</div>
							}
						}
					</div>
				</div>
			</div>
		</section>

		<section id="about">
			<div class="container">
				<h2>about</h2>
				<div class="star">
					<span>
						<i class="fas fa-star"></i>
					</span>
				</div>
				<div class="row justify-content-center">
					<div class="col-4">
						<p class="about-text">@Model.settings.AboutText</p>
					</div>
					<div class="col-4">
						<p class="about-text">
							You can create your own custom avatar for the masthead, change
							the icon in the dividers, and add your email address to the
							contact form to make it fully functional!
						</p>
					</div>
				</div>
				<div id="about-btn-block">
					<button class="btn btn-outline-light">
						<i class="fas fa-download"></i> free download!
					</button>
				</div>
			</div>
		</section>

		<section id="contact">
			<div class="container">
				<h2>Contact me</h2>
				<div class="star">
					<span> <i class="fas fa-star"></i></span>
				</div>

				<form class="mt-5" asp-controller="Home" asp-action="Send" method="post">
					<div class="row justify-content-center">
						<div class="col-8">
							<p class="text-danger">@TempData["message"]</p>
							<div class="form-floating mb-3">
								<input type="text"
									   class="form-control"
									   asp-for="@Model.contactMessage.FullName"
									   placeholder="Full Name" />
								<label asp-for="@Model.contactMessage.FullName">Full Name</label>
							</div>
							<div class="form-floating mb-3">
								<input type="email"
									   class="form-control"
									   asp-for="@Model.contactMessage.Email"
									   placeholder="name@example.com" />
								<label asp-for="@Model.contactMessage.Email">Email address</label>
							</div>
							<div class="form-floating mb-3">
								<input type="number"
									   class="form-control"
									   asp-for="@Model.contactMessage.Phone"
									   placeholder="Phone Number"
									   step="1" />
								<label asp-for="@Model.contactMessage.Phone">Phone Number</label>
							</div>
							<div class="form-floating mb-3">
								<textarea class="form-control"
										  placeholder="Leave a comment here"
										  asp-for="@Model.contactMessage.Message"></textarea>
								<label asp-for="@Model.contactMessage.Message">Message</label>
							</div>
							<button type="submit" style="outline : none">Send</button>
						</div>
					</div>
				</form>
			</div>
		</section>
	</main>
	<footer>
		<div class="container">
			<div class="row">
				<div class="col-4">
					<h3>LOCATION</h3>
					<p>
						@Model.settings.Location <br />Clark, MO 65243
					</p>
				</div>
				<div class="col-4">
					<h3>AROUND THE WEB</h3>
					<ul class="d-flex justify-content-center">
						@{
							foreach (var item in @Model.sosialMedia)
							{
								<li class="d-flex justify-content-center align-items-center">
									<a href="#" class="btn btn-outline-light">
										<i class="@item.Icon"></i>
									</a>
								</li>
							}
						}
					</ul>
				</div>
				<div class="col-4">
					<h3>ABOUT FREELANCER</h3>
					<p>
						@Model.settings.FreelancerAbout <a href="#">Start Bootstrap</a> .
					</p>
				</div>
			</div>
		</div>

		<div id="page-end" class="text-center py-3">
			<p class="text-light">Copyright © Your Website 2021</p>
		</div>
	</footer>
</body>
</html>

